{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:prettier/recommended",
    "eslint-config-prettier"
  ],
  "parserOptions": {
    // Required for certain syntax usages
    "ecmaVersion": 2017,
    "sourceType": "module",
    "jsx": true
  },
  "plugins": ["prettier", "promise"],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "import/no-unresolved": "off",
    "react/destructuring-assignment": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100
      }
    ],
    "eslint(global-require)": 0
  }
}
